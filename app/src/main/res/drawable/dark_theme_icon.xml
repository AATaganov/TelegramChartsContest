    <item android:gravity="top|end">
        <shape android:shape="oval">
            <padding android:top="5dp" />
            <size android:width="13dp" android:height="13dp"/>
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>
</layer-list>